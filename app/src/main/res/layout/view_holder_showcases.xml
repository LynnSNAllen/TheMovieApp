<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_showcases"
    android:layout_height="@dimen/height_showcases"
    android:layout_marginStart="@dimen/margin_medium_2"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivShowCase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/dctotalfilm" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlay"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="@dimen/margin_xxlarge"
            android:layout_height="@dimen/margin_xxlarge"
            android:elevation="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:backgroundTint="@color/colorAccent"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="@dimen/margin_large"
            app:icon="@drawable/ic_baseline_play_arrow_black_24dp"
            app:iconPadding="0dp" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowCasesMovieDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/margin_medium_3"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:text="@string/lbl_showcase_date"
        android:textColor="@color/colorSecondaryText"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowCaseMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvShowCasesMovieDate"
        android:elevation="@dimen/margin_medium_3"
        android:layout_alignStart="@id/tvShowCasesMovieDate"
        android:text="@string/lbl_future_dc_in_2023"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular_2x"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
<!--        android:background="@color/colorTransparentOverlay"-->
<!--        android:elevation="@dimen/margin_small"/>-->
</RelativeLayout>